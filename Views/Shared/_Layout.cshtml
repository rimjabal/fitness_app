<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitTrack Intelligence</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="moroccan-theme">
    <!-- Moroccan Pattern Header -->
    <div class="moroccan-pattern-top"></div>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light moroccan-navbar">
            <div class="container-fluid">
                <a class="navbar-brand moroccan-brand" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-dumbbell me-2"></i>
                    <span class="brand-text">FitTrack Intelligence</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link moroccan-nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-chart-line me-1"></i>Tableau de Bord
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link moroccan-nav-link" asp-controller="Plan" asp-action="Index">
                                <i class="fas fa-calendar-week me-1"></i>Programme Hebdo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link moroccan-nav-link" href="#nutrition">
                                <i class="fas fa-utensils me-1"></i>Nutrition
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link moroccan-nav-link" href="#progression">
                                <i class="fas fa-trophy me-1"></i>Progression
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                <button type="submit" class="nav-link moroccan-nav-link" style="background: none; border: none; cursor: pointer;">
                                    <i class="fas fa-sign-out-alt me-1"></i>Déconnexion
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <!-- Moroccan Footer -->
    <footer class="moroccan-footer">
        <div class="moroccan-pattern-footer"></div>
        <div class="container text-center py-4">
            <p class="mb-2">
                <i class="fas fa-fire text-warning"></i>
                <span class="mx-2">FitTrack Intelligence</span>
                <i class="fas fa-fire text-warning"></i>
            </p>
            <p class="mb-0 small">
                Votre compagnon nutritionnel intelligent &copy; 2025
            </p>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
